---

<Base
  title={title}
  description={`Projects by ${site.name}`}
  canonicalPath="/projects"
>
  <article class="prose">
    <h1>Projects</h1>

    <div class="projects-list">
      {projects.map((project) => (
        <article class="project-card">
          <h2 class="project-card__title">{project.title}</h2>
          <img
            class="project-card__image"
            src={project.image}
            alt={project.title}
            loading="lazy"
            decoding="async"
          />
          <div class="project-card__content">
            <p class="project-card__desc" set:html={project.description}></p>
          </div>
        </article>
      ))}
    </div>
  </article>

  <style>
    .projects-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-5);
      margin-top: var(--space-5);
    }

    .project-card {
    background: var(--bg);
    border: none;
    border-radius: 12px;
    overflow: hidden;
    padding-bottom: var(--space-5);
    border-bottom: 1px solid var(--border);
    }

    .project-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
    }

    .project-card__image {
      width: 100%;
      height: auto;
      /* max-height: 300px; */
      object-fit: cover;
    }

    .project-card__content {
      padding: var(--space-3) var(--space-4) var(--space-4);
    }

    .project-card__title {
      font-size: 20px;
      margin: 0 0 var(--space-2);
    }

    .project-card__desc {
      font-size: 15px;
      color: var(--muted);
      margin: 0;
    }
  </style>
</Base>