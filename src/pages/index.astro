---
import Base from "../layouts/Base.astro";
import { site } from "../content/site";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: site.name,
  url: site.url,
  inLanguage: site.locale
};
---

<Base
  title={site.name}
  description={site.description}
  canonicalPath="/"
  jsonLd={jsonLd}
>
  <article class="prose home">
    <img
      class="home__logo"
      src="images/logo-bbf.png"
      alt="AXE BOW FUND logo"
      loading="eager"
      decoding="async"
    />

    <h1 class="home__title">AXE BOW FUND</h1>

    <figure class="home__hero full-bleed" aria-label="Homepage hero image">
      <img
        class="home__hero-img"
        src=`${import.meta.env.BASE_URL}images/damen-fcs-5009.jpg`
        alt=""
        loading="eager"
        decoding="async"
      />
    </figure>

    <section class="home__partners" aria-labelledby="partners">
      <h1 id="partners">Partners</h1>
      <img
      class="partners"
      src=`${import.meta.env.BASE_URL}images/partners.png`
      alt="partners"
      loading="lazy"
      decoding="async"
      />
    </section>
  </article>

  <style>
    .home{
      text-align: center;
    }

    .home__logo{
      display: block;
      margin: 0 auto var(--space-3);
      width: min(400px, 50vw);
      height: auto;
    }

    .home__title{
      margin-bottom: var(--space-4);
    }

    .full-bleed {
      width: calc(100% + var(--space-4) * 2);
      margin-left: calc(-1 * var(--space-4));
      margin-right: calc(-1 * var(--space-4));
    }

    .home__hero{
      margin: 0 0 var(--space-5);
    }

    .home__hero-img{
      display: block;
      width: 100%;
      height: min(56vw, 520px);
      object-fit: cover;
      border-radius: 10px;
    }

    .home__partners{
      text-align: center;
    }

    .partners{
      margin-top: var(--space-2);
      width: 100%;
      height: auto;
      border-radius: 12px;
    }
  </style>
</Base>
